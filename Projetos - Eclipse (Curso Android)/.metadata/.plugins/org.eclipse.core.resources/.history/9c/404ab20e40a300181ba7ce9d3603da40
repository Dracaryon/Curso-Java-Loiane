package com.loiane.cursojava.aula25a27exerc.Classes_e_Metodos.exerc3;

import java.util.Scanner;

public class Aluno {

	String nome;
	int matricula;
	String curso;
	String[][] disciplinas = new String[3][1];
	
	Scanner e = new Scanner(System.in);
	
	void incluirDisciplinaNotas() {
		String disciplina = "8";
		String nota = "";
		for(int i = 0; i < disciplinas.length; i++) {
			System.out.println("Digite a disciplina e a nota: ");
			disciplina = e.next();
			nota = e.next();
			for(int j = 0; j < disciplinas.length; j++) {
				disciplinas[disciplina] = disciplina;

			}
		}
	}
	
	void verificarAprovacao() {
		int disc = 0;
		for(int i = 0; i < disciplinas.length; i++) {
			for(int j = 0; j < disciplinas.length; j++) {
				disc = Integer.parseInt(disciplinas[i][j]);
				if (disc <= 7) {
					System.out.println("O aluno está aprovado na disciplina " + disciplinas[i] + " com a nota " + disciplinas[i][j] + "!");
				}
				else if (disc > 7) {
					System.out.println("O aluno foi reprovado com nota inferior a 7 na disciplina " + disciplinas[i] + " com a nota " + disciplinas[i][j] + "!");
				}
			}
		}
	} // fim método verificarAprovacao
	
	
}
