package com.loiane.cursojava.aula34exerc.variav_e_method_static;

public class Contador {
	
	private static int incrementador = 0;
	
	Contador() {
		incrementador++;
	}
	

    void zerarIncrement() {
		incrementador = 0;
		System.out.println("Increment zerado!");
	}
	
	void incrementar() {
		incrementador++;
		System.out.println("Increment adicionado com sucesso!");
	}
	
	public static int getIncrementador() {
		return incrementador;
	}

	public static void setIncrementador(int incrementador) {
		Contador.incrementador = incrementador;
	}
	
	

}
